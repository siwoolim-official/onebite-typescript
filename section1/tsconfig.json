{
  "compilerOptions": {
    "target": "ESNext", // 컴파일 결과 생성되는 자바스크립트 코드의 버전
    "module": "ESNext", // 변환되는 자바스크립트 코드의 모듈 시스템을 설정
    "outDir": "dist", // 파일 결과 생성할 자바스크립트 코드의 위치
    "strict": true, // 엄격한 타입 검사를 의미하는 옵션
    "moduleDetection": "force", // 자동으로 모든 타입스크립트 파일이 로컬 모듈(독립 모듈)로 취급
    "skipLibCheck": true, // <--- node_modules 체크 안하기.
  },
  "include": ["src"]
}